<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    tools:context="com.stackme.thewire.syllorg.GetStudentDetails">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <AutoCompleteTextView
            android:id="@+id/university_autoCompleteTextView"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/textView"
            android:hint="Type to search University" />

        <NumberPicker
            android:id="@+id/sem_numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/university_autoCompleteTextView"
            android:layout_below="@+id/university_autoCompleteTextView"
            android:layout_marginStart="65dp"
            android:layout_marginTop="31dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="74dp"
            android:text="University"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="37dp"
            android:text="Semester"
            android:textSize="18sp" />

        <Button
            android:id="@+id/done_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/sem_numberPicker"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:text="Submit" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
